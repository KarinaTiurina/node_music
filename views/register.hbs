
  <div class="row">
    <div class="col-md-5">
      <h1>Зарегистрироваться</h1>

      <div class="error">
        {{{msg}}}
      </div>

      <form action="register" method="post">

          <div class="form-group">
            <label for="username">Имя</label><br />
            <div class="input-group">
              <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
              <input type="text" class="form-control username_login" name="username" id="username">
            </div>
          </div>

          <div class="form-group">
            <label for="email">Email</label><br />
            <div class="input-group">
              <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
              <input type="email" class="form-control" name="email" id="email">
            </div>
          </div>

          <div class="form-group">
            <label for="password">Пароль</label><br />
            <div class="input-group">
              <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
              <input type="password" id="password" class="form-control" name="password">
            </div>
          </div>

          <div class="actions buffer-bottom">
            <button type="submit" class="btn btn-primary" id="register_btn">Зарегистрироваться</button>
          </div>
      </form>

    </div>
  </div>
